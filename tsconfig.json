{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["es2015", "dom"],
    "module": "commonjs",
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "typeRoots": ["./src/libraryTypes", "./node_modules/@types"]
  },
  "include": ["./src/**/*"],
  "exclude": ["./src/libraryTypes"]
}
